{
	"name": "tr-note",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare && wrangler deploy",
		"preview": "opennextjs-cloudflare && wrangler dev",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
		"d1:create": "wrangler d1 create tr_note_db",
		"d1:migrations:generate": "wrangler d1 migrations generate tr_note_db",
		"d1:migrations:apply": "wrangler d1 migrations apply tr_note_db",
		"d1:migrations:apply:local": "wrangler d1 migrations apply tr_note_db --local",
		"d1:execute": "wrangler d1 execute tr_note_db",
		"d1:execute:local": "wrangler d1 execute tr_note_db --local"
	},
	"dependencies": {
		"@auth/core": "^0.39.0",
		"@auth/d1-adapter": "^1.9.0",
		"bcrypt": "^5.1.1",
		"next": "15.2.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250327.0",
		"@eslint/eslintrc": "^3",
		"@opennextjs/cloudflare": "^0.5.12",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.2.4",
		"typescript": "^5",
		"wrangler": "^4.6.0"
	}
}
